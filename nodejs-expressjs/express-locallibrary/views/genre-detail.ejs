<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head',{title }) %>
    <body>
        <%- include('./partials/navbar') %>
        <h1>
            <%= title %>
        </h1>
            <% if(books.length > 0){ %>
                <% books.forEach(book => { %>
                    <div> 
                        <a href="<%= book.url %>">
                            <%= book.title %> 
                        </a>
                        <p> <%= book.summary %> </p>
                    </div>
                <% }) %>
            <% } else { %>
                <p>Genre has no books</p>
            <% } %>
       
    </body>
</html>